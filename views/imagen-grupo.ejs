<main class="contenedor contenedor-formularios ">
    <h1><%= nombrePagina %></h1>
    <form  class="default-form" method="POST" enctype="multipart/form-data">
       
       
        <div class="campo">
            <label for="">Imagen</label>
            <input type="file" name="imagen" accept="image/jpeg, image/png">
        </div>
        <%if(grupo.imagen){%>
            <div class="campo">
                <label for="">Imagen Actual</label>
                <img src="/uploads/grupos/<%= grupo.imagen %>" alt="Imagen del grupo" width="400">
            </div>
        
           
        <%} else {%>
            <p>No hay imagen actual</p>
        <%}%>
        <div class="campo enviar">
            <input type="submit" value="Subir Imagen" class="btn btn-rosa">
        </div>
    </form>
</main>